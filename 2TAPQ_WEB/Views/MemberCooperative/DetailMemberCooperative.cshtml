@model BusinessObjects.Models.Account
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCooperative.cshtml";

}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="Member.html">Quản lý thành viên</a></li>
            <li class="active">Chi tiết thành viên</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Chi tiết thành viên</h1>
        </div>
    </div>
    <!--/.row-->




    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="row">

                        <div class="col-md-5 border-right">
                            <div class="p-3 py-5">

                                <div class="row mt-2">
                                    <div class="col-md-6">
                                        <label class="labels">Tên Đăng Nhập</label>
                                        <input class="form-control" value="@Model.Username" disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="labels">Họ & Tên</label>
                                        <input class="form-control" value="@Model.Fullname" disabled>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <label class="labels">Số Điện Thoại</label>
                                        <input class="form-control" value="@Model.Phone" disabled>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="labels">Email</label>
                                        <input class="form-control" value="@Model.Email" disabled>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="labels">Địa Chỉ</label>
                                        <input class="form-control" value="@Model.Address ,@Model.IdWardNavigation.Name ,@Model.IdWardNavigation.IdDistrictNavigation.Name ,@Model.IdWardNavigation.IdDistrictNavigation.IdProvinceNavigation.Name " disabled>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="labels">Ngày Sinh</label>
                                        @{
                                        DateTime a = Convert.ToDateTime(@Model.Birthday);
                                        }
                                        <input class="form-control" value="@a.ToString("dd/M/yyyy")" disabled>
                                    </div>


                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <label class="labels">Số Lượng Ao</label>
                                        <input class="form-control" value="@ViewBag.Pond" disabled>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="labels">Sản Lượng</label>
                                        <input class="form-control" value="5 tấn" disabled>
                                    </div>

                                </div>
                                <div class="mt-6 text-center">
                                    <a asp-action="MemberCooperative" asp-controller="MemberCooperative">
                                        <button class="btn btn-danger"
                                                style="margin-top: 12px;">
                                            Back
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 py-5">

                                <div class="col-md-12">
                                    <label class="labels">Avatar</label>
                                    @if(@Model.Image == null){
                                        <img src="~/images/avatar.png"style="width: 100%;">
                                    }
                                    else
                                    {
                                        <img src="@Model.Image"style="width: 100%;">
                                    }


                                    
                                </div>


                            </div>
                        </div>
                    </div>

                </div>
            </div>



        </div>



    </div>
</div>

