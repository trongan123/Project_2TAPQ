@model BusinessObjects.Models.Account
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCooperative.cshtml";

}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="Member.html">Quản lý thành viên</a></li>
            <li class="active">@Model.Fullname</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thành viên: @Model.Fullname</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-8">

                        <form asp-action="EditMember">
                            <input type="hidden" asp-for="IdAcc" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="Role" />
                            <input type="hidden" asp-for="Password" />
                            <input type="hidden" asp-for="DateJoin" />
                            <input type="hidden" asp-for="IdWard" />
                            <input type="hidden" asp-for="Username" />
                            <input type="hidden" asp-for="Image" />
                            <input type="hidden" asp-for="Email" />
                            <div class="form-group">
                                <label>Họ & Tên</label>
                                <input type="text" asp-for="Fullname" required class="form-control"
                                       placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" asp-for="Email" required
                                       class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input type="text" name="user_name" required value="trilm2007" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="text" asp-for="Phone" required
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Sinh nhật</label>
                                <input type="date" asp-for="Birthday" required
                                       class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input type="text" asp-for="Address" required
                                       class="form-control">
                            </div>


                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </form>
                    </div>

                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

</div>
<script src="~/js/base64.js"></script>