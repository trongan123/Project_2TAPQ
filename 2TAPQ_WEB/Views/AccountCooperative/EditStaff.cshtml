@model BusinessObjects.Models.Account
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCooperative.cshtml";
    BusinessObjects.Models.Account farm = ViewBag.Farm as BusinessObjects.Models.Account;
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="Member.html">>Danh sách nhân viên</a></li>
            <li class="active">Sửa Nhân viên kiểm soát</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sửa Nhân viên kiểm soát</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-8">

                        <!-- <div class="alert alert-success">Thêm thành công !</div> -->

                        <form asp-action="EditStaff">
                            <input type="hidden" asp-for="IdAcc" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="Role" />
                            <input type="hidden" asp-for="IdWard" />
                            <input type="hidden" asp-for="Address" />
                            <input type="hidden" asp-for="Image" id="ImageA" />
                            <input type="hidden" asp-for="Password" />
                            <input type="hidden" asp-for="IdRoleStaff" />
                            <input type="hidden" asp-for="DateJoin" />
                            <input type="hidden" name="idRole" value="RL00000004" />
                            <div class="form-group">
                                <label>Họ & Tên</label>
                                <input id="Fullname" asp-for="Fullname" type="text" name="Fullname" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input id="email" asp-for="Email" type="email" name="email" class="form-control" required pattern='^[\w-\.]+@@([\w-]+\.)+[\w-]{2,4}$'
                           oninvalid="this.setCustomValidity('Email is Wrong format')" />
                            </div>
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input id="Username" asp-for="Username" type="text" name="Username" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input id="Phone" asp-for="Phone" type="phone" name="Phone" class="form-control"  required pattern='^(\+84|0[3|5|7|8|9])+([0-9]{8})'
                           oninvalid="this.setCustomValidity('Phone is Wrong format')"
                           oninput="this.setCustomValidity('')" />
                            </div>
                            <div class="form-group">
                                <label>Sinh nhật</label>
                                <input  id="datePickerId" asp-for="Birthday" type="date" name="Birthday" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Lương</label>
                                <input id="salary" type="text" name="salary" value="@Model.IdRoleStaffNavigation.Salary" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label>Chức vụ</label>
                                <input name="sta" value="Ban Kiểm Soát" required type="text" class="form-control" disabled>
                            </div>



                            <button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>

                        </form>
                    </div>

                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

</div>
<script>
    // Get the modal
datePickerId.max = new Date().toISOString().split("T")[0];
</script>