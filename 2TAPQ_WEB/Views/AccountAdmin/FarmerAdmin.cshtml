@model IEnumerable<BusinessObjects.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
    int idpo = 0;
}


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Danh sách chủ hộ</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách chủ hộ</h1>
        </div>
    </div><!--/.row-->
    @if (@ViewBag.success != null)
    {
        <div class="alert alert-success">Thay Đổi Trạng Trái Thành Công !</div>
    }

    <div id="toolbar" class="btn-group">
        <a asp-action="CreateFarmerAdmin" class="btn btn-success">

            <i class="glyphicon glyphicon-plus"></i> Thêm chủ hộ
        </a>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-action="SearchFarm">
                        <div id="toolbar" class="btn-group"
                             style="  position: relative; float: right;margin-top: 2px; ">

                            <button type="submit" class="btn btn-link">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>

                        </div>
                        <div id="toolbar" class="select_area"
                             style=" width: 200px ; position: relative; float: right;margin-top: 11px;">

                            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm bằng số điện thoại">

                        </div>
                    </form>
                    <table data-toolbar="#toolbar"
                           data-toggle="table">

                        <thead>
                            <tr>


                                <th data-field="name" data-sortable="true">Họ và Tên</th>
                                <th data-field="price" data-sortable="true">Email</th>
                                <th data-field="username" data-sortable="true">Tên đăng nhập</th>
                          
                                <th data-field="phone" data-sortable="true">Số điện thoại</th>
                                <th data-field="birthday" data-sortable="true">Ngày sinh</th>
                                <th data-field="address" data-sortable="true">Địa chỉ</th>
                                <th data-field="date" data-sortable="true">Ngày tham gia</th>
                                <th>Ao</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                idpo++;
                                DateTime a = Convert.ToDateTime(@item.Birthday);
                                DateTime b = Convert.ToDateTime(@item.DateJoin);

                                <tr>

                                    <td style="">@item.Fullname</td>
                                    <td style="">@item.Email</td>
                                    <td style="">@item.Username</td>
                    
                                    <td style="">@item.Phone</td>
                                    <td style="">@a.ToString("dd/M/yyyy")</td>
                                    <td style="">@item.Address</td>
                                    <td style="">@b.ToString("dd/M/yyyy")</td>
                                    <td><a asp-action="PondAdmin" asp-controller="PondAdmin" asp-route-idacc="@item.IdAcc" class="btn btn-primary">Ao</a></td>
                                     <td class="form-group">
                                        <a asp-action="EditAccountAdmin" asp-route-id="@item.IdAcc" class="btn btn-primary">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>

                                        <a href="#" class="btn btn-danger"
                                       onclick="document.getElementById('@idpo').style.display='block'">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>
                                        <div id="@idpo" class="modal">
                                            <span onclick="document.getElementById('@idpo').style.display='none'"
                                              class="close" title="Close Modal">×</span>


                                            <form class="modal-content ">
                                                <div class="container1">
                                                    <h1>Xóa tài khoản</h1>
                                                    <p>Bạn có chắc là muốn xóa không?</p>

                                                    <div class="clearfix">
                                                        <button type="button"
                                                            onclick="document.getElementById('@idpo').style.display='none'"
                                                            class="cancelbtn">
                                                            Thoát
                                                        </button>
                                                        <a asp-action="DeleteAccount" asp-route-id="@item.IdAcc">
                                                            <button type="button"
                                                                onclick="document.getElementById('@idpo').style.display='none'"
                                                                class="deletebtn">
                                                                Xóa
                                                            </button>
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </td>
                                 
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    @if (pager.TotalPages > 0)
                    {
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                @{
                                    int a = pageNo;
                                    int b = pageNo;
                                    if (pageNo > 1)
                                    {
                                        a = pageNo - 1;
                                    }
                                    if (pageNo < pager.EndPage)
                                    {
                                        b = pageNo + 1;
                                    }
                                }
                                @if (@ViewBag.Search == null)
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="AccountAdmin" asp-action="FarmerAdmin" asp-route-pg="@a">&laquo;</a></li>
                                    @for (var pge = 1; pge <= pager.EndPage; pge++)
                                    {
                                        <li class="page-item" @(pge == pager.CurrentPage ? "active" : "")>
                                            <a class="page-link" asp-controller="AccountAdmin" asp-action="FarmerAdmin" asp-route-pg="@pge">@pge</a>
                                        </li>
                                    }
                                    <li class="page-item"><a class="page-link" asp-controller="AccountAdmin" asp-action="FarmerAdmin" asp-route-pg="@b">&raquo;</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="AccountAdmin" asp-action="FarmerAdmin" asp-route-pg="@a" asp-route-sea="@ViewBag.Search">&laquo;</a></li>
                                    @for (var pge = 1; pge <= pager.EndPage; pge++)
                                    {
                                        <li class="page-item" @(pge == pager.CurrentPage ? "active" : "")>
                                            <a class="page-link" asp-controller="AccountAdmin" asp-action="FarmerAdmin" asp-route-pg="@pge" asp-route-sea="@ViewBag.Search">@pge</a>
                                        </li>
                                    }
                                    <li class="page-item"><a class="page-link" asp-controller="AccountAdmin" asp-action="FarmerAdmin" asp-route-pg="@b" asp-route-sea="@ViewBag.Search">&raquo;</a></li>
                                }
                            </ul>

                        </nav>
                    }
                </div>


            </div>
        </div>
    </div>

    <!--/.row-->


</div>	<!--/.main-->
