@model BusinessObjects.Models.Pond

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    IEnumerable<BusinessObjects.Models.FishCategory> DetailFishCategory = ViewBag.FishCategory as IEnumerable<BusinessObjects.Models.FishCategory>;
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg>
                </a>
            </li>
            <li><a href="pound.html">Quản lý ao</a></li>
            <li class="active">Thêm ao</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm ao</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    @if (@ViewBag.name!=null) {
                        <div class="alert alert-danger">Tên ao đã tồn tại !</div>
                    }
                    <form asp-action="AddPond" method="post">
                        <div class="col-md-6">
                            <input type="hidden" asp-for="IdAcc" value="@ViewBag.Idacc" />
                            <input type="hidden" asp-for="IdPond" value="P000000001" />
                            <input type="hidden" asp-for="Status" value="1" />
                            <input type="hidden" asp-for="Image" value="" id="Imagep" name="Image" />
                            <div class="form-group">
                                <label>Tên ao</label>
                                <input asp-for="Name" required name="Name" class="form-control" placeholder="" pattern='^[a-zA-Z_ÀÁÂÃÈÉÊÌÍÒÓÔÕÙÚĂĐĨŨƠàáâãèéêìíòóôõùúăđĩũơƯĂẠẢẤẦẨẪẬẮẰẲẴẶẸẺẼỀỀỂưăạảấầẩẫậắằẳẵặẹẻẽềềểỄỆỈỊỌỎỐỒỔỖỘỚỜỞỠỢỤỦỨỪễệỉịọỏốồổỗộớờởỡợụủứừỬỮỰỲỴÝỶỸửữựỳỵỷỹ 0123456789]{1,50}$'
                                       oninvalid="this.setCustomValidity('Không được quá dài')"
                                       oninput="this.setCustomValidity('')" />
                            </div>

                            <div class="form-group">
                                <label>Diện tích ao (m&sup2;)</label>
                                <input asp-for="PondArea" name="PondArea" type="text" class="form-control" pattern="^[0-9]+$"
                                       oninvalid="this.setCustomValidity('Chỉ được nhập số')"
                                       oninput="this.setCustomValidity('')" required>
                            </div>

                            <div class="form-group">
                                <label>Giống cá</label>
                                <select asp-for="IdFcategory" name="IdFcategory" class="form-control">
                                    @foreach (var item in DetailFishCategory)
                                    {
                                        <option value="@item.IdFcategory">@item.CategoryName</option>

                                    }
                                </select>
                            </div>
                            <div asp-for="IdAcc" class="form-group">
                                <label>Lượng cá giống (Vạn Con)</label>
                                <input asp-for="QuantityOfFingerlings" name="QuantityOfFingerlings" type="text" class="form-control" pattern="^[0-9]+$"
                                       oninvalid="this.setCustomValidity('Chỉ được nhập số')"
                                       oninput="this.setCustomValidity('')" required>
                            </div>
                            <div class="form-group">
                                <label>Mùa vụ</label>
                                <select asp-for="Session" name="Session" class="form-control">
                                    <option value=1>Quý 1</option>
                                    <option value=2>Quý 2</option>
                                    <option value=3>Quý 3</option>

                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Ảnh ao</label>

                                <input required name="Image" id="imagepond" type="file">
                                <br>
                                <div>
                                    <img id="imagepond1" src="img/ao.jpg" height="200px" width="220px">
                                </div>
                            </div>


                            <button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                    </form>

                </div>

            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

</div>